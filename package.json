    "ts-node": "^6.1.0",
    "typescript": "^2.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/graphql": "^0.13.1",
    "@types/mongoose": "^5.0.15",
    "graphql-typings": "^0.0.1-beta-2",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.4",
    "tslint": "^5.10.0"
  }
